<style>
    body {
        -moz-user-select:none;
    }

    table.main {
        vertical-align:center;
        width: 100%;
        -moz-user-select:none;
    }

    .container {
        height: 82%;
        background-color: #FFFFDD;
        margin: 20px 20px 20px 20px;
        overflow: auto;
    }

    .data {
        padding-left: 5px;
    }

    table.main td {
        text-align: left;
        border-style: solid;
        border-width: 1px;
        text-align: left;
        word-wrap: break-word;
    }

    table.main th {
        text-align: left;
        border-style: solid;
        border-width: 1px;
        padding-left: 5px;
        text-align: left;
    }

    a {
        background-color: grey;
        border-bottom: 1px outset #EEEEEE;
        border-style: outset;
        border-top: 1px outset #EEEEEE;
        color: white;
        display: block;
        padding: 10px 16px 10px 10px;
        text-align: center;
        text-decoration: none;
    }
    legend {
        font-size: 18px;
        font-weight: normal;
        color: #3465a4;
    }

    fieldset {
        margin: 20px;
        border-radius: 5px;
        border: 1px solid #3465a4;
        padding: 20px;
    }

</style>

<fieldset>
  <legend>
    <%= t('forms.legends.user_details') %>
  </legend>

    <div class="container">
      <table class="main">

        <tr>
          <th><%= t('menu.terms.name') %></th>
          <td class="data"><%=@patient.fullname%></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=name", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.gender') %></th>
          <td><%=@patient.gender%></td>
          <td class="data"><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=gender", target: "_parent",
                                       :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.maritals_status') %></th>
          <td><%=@patient.marital_status%></td>
          <td class="data"><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=marital_status", target: "_parent",
                                       :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.date_of_birth') %></th>
          <td class="data"><%=@patient.birthdate_formatted%></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=birthdate", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.national_id') %></th>
          <td class="data"><%=@patient.nat_id%></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=national_id", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.place_of_birth') %></th>
          <td class="data"><%=@patient.place_of_birth %></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=place_of_birth", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.area_of_residence') %></th>
          <td class="data"><%=@patient.current_residence%></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=current_residence", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>

        <tr>
          <th><%= t('menu.terms.occupation') %></th>
          <td class="data"><%=@patient.occupation%></td>
          <td><%= link_to t('forms.buttons.edit'),"/patients/#{@patient.id}/edit?section=occupation", target: "_parent",
                          :class => "anchor_class" %>
          </td>
        </tr>
      </table>
    </div>
</fieldset>