<!DOCTYPE html>
<html>
<head>
  <title>Patient Registration</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'ts', 'data-turbolinks-track' => true %>
  <style>

      body {
          margin-top: 10px;
          margin-left: 10px;
          margin-right: 10px;
          margin-bottom: 0px;
          -moz-user-select: none;
          -webkit-user-select: none;
          overflow: hidden;
          font-family: "Nimbus Sans L", "Arial Narrow", sans-serif;
          min-width: 684px;
          min-height: 519px;
      }
  </style>
  <%= csrf_meta_tags %>
</head>
<body onload="resize()" onresize="resize()">

<div id="main" style="border: #3465a4 solid 1px; width: 100%; height: 100%;">
  <div style="display: table; width: 100%; height: 100%;">
    <div style="display: table-row;">
      <div style="display: table-cell; border-bottom: 1px solid #3465a4; height: 80px; vertical-align: middle; color: #3465a4; font-size: 36px;">
        <div id="legend" style="float: left; margin: 20px; margin-bottom: -15px;"></div>
        <div style="float: right; margin-right: 5px;">
          <table cellpadding="5">
            <tr>
              <td style="vertical-align: middle;">
                <div style="border: 1px solid #ccc; color: #ccc; border-radius: 20px; padding: 2px; font-size: 0.4em;
                        height: 20px; padding-left: 20px; padding-right: 20px;">
                  <%= t('menu.logged_in_as') %> : <%= User.current.username rescue nil %>
                </div>
              </td>
              <td>
                <%= t('menu.patient_registration') %> <sub style="font-size: 11px;"><%#= app_version %></sub>
              </td>
             <!--
              <td>
                <img src="/assets/coa.png" height="50"/>
              </td> !-->
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div style="display: table-row;">
      <div style="display: table-cell;">

        <div id="display" style="width: 100%; height: 100%; border: none; overflow: auto;">
          <%= yield %>
        </div>

      </div>
    </div>
    <div style="display: table-row;">
      <div style="display: table-cell; border-top: 1px solid #3465a4; height: 70px;">

        <div style="position: absolute; left: 20px; bottom: 15px; width: 570px; height: 80px; vertical-align: middle;">
          <!--
          <div style="position: absolute; width: 500px; padding-left: 60px; left: 30px; bottom: 15px;
                  border: 1px solid #3465a4; height: 50px; border-radius: 60px; background-color: #fff; z-index: 0; vertical-align: middle; ">

            <div id="section" style="font-size: 28px; color: #3465a4; position: absolute; left: 60px; bottom: 18px;">
              <%#= @section rescue "" %>
            </div>

          </div>


          <div style="background-color: #3465a4; font-size: 36px; width: 80px; height: 80px;
                  border-radius: 80px; vertical-align: middle; text-align: center; position: absolute; z-index: 10;">
            <div style="position: absolute; left: 15px; bottom: 30px;  color: #fff; font-size: 18px;">
              Facility
            </div>
          </div> !-->
        </div>

        <!--button class="red" style="position: absolute; right: 30px; bottom: 20px; cursor: pointer;
                border: 1px solid #fff; padding: 5px; border-radius: 50px; padding-top: 7px;"
                onmousedown="window.location = '<%= (!@targeturl.blank? ? "#{@targeturl}" : "/view") %>'">
          <%= (!@targettext.blank? ? @targettext : "Cancel") %>
        </button-->

      </div>
    </div>
  </div>
</div>


<script>
    var cancelDestination = "<%= (!@targeturl.blank? ? "#{@targeturl}" : "/") %>";

    function __$(id) {
        return document.getElementById(id);
    }

    function resized() {

        if (__$("main")) {
            __$("main").style.height = (window.innerHeight - 20) + 'px';
        }

        if (__$("display")) {
            __$("display").style.height = (window.innerHeight - 150) + 'px';
        }
    }

    // setTimeout("resize()", 10);

    resize();
</script>
</body>
</html>
